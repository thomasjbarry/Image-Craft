    private void jDrawingAreaMousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jDrawingAreaMousePressed
        //Get the coordinates clicked
        int x = evt.getX();
        int y = evt.getY();
        
        //Currently dragging the mouse 
        //must have accidentally clicked the other mouse button
        if (dragging == true)
            return;
        //Store the clicked point as prevX/prevY to draw lines from
        prevX = x;
        prevY = y;
        
        //You are about to drag the mouse
        dragging = true;
        
        //Get the graphics objects for the BufferedImage and the JPanel
        drawingGraphics = getGraphics();
        imageGraphics = currentDrawing.getGraphics();
        
        //Set the BufferedImage color
        if (!SwingUtilities.isRightMouseButton(evt)) {
            imageGraphics.setColor(primaryColor);
        } else {
            imageGraphics.setColor(secondaryColor);
        }
    }//GEN-LAST:event_jDrawingAreaMousePressed

    private void jDrawingAreaMouseReleased(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jDrawingAreaMouseReleased
        //If we aren't dragging then we clicked
        if (dragging == false)
            return;
        
        // Otherwise we just finished dragging
        else
        {
            dragging = false;
            
            //Clean up resources
            drawingGraphics.dispose();
            drawingGraphics = null;
            imageGraphics.dispose();
            imageGraphics = null;
        }
    }//GEN-LAST:event_jDrawingAreaMouseReleased

    private void jDrawingAreaMouseDragged(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jDrawingAreaMouseDragged
        //If we aren't dragging then don't do anything
        if (dragging == false)
        {}
        
        //Otherwise draw a new line
        else
        {
            //Get the coordinates clicked
            int x = evt.getX();
            int y = evt.getY();

            //If we dragged the mouse outside of the JPanel
            //Set the x/y value to the border value
            if (x < 0) {
                x = 0;
            } else if (x > (drawingWidth - 1)) {
                x = drawingWidth - 1;
            }
            if (y < 0) {
                y = 0;
            } else if (y > (drawingHeight - 1)) {
                y = drawingHeight - 1;
            }       

            //Draw a line from the previous point to the current point
            //on the BufferedImage
            imageGraphics.drawLine(prevX, prevY, x, y);
            
            //Draw the BufferedImage onto the JPanel
            drawingGraphics.drawImage(currentDrawing,
                    drawingXMin, drawingYMin, this);
            
            //Current point is now the previous point
            prevX = x;
            prevY = y;
        }
    }//GEN-LAST:event_jDrawingAreaMouseDragged

    private void jDrawingAreaMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jDrawingAreaMouseClicked
        //Get the coordinates clicked
        int x = evt.getX();
        int y = evt.getY();

        //Get the graphics objects for the BufferedImage and the JPanel
        drawingGraphics = getGraphics();
        imageGraphics = currentDrawing.getGraphics();
        
        //Set the BufferedImage color
        if (!SwingUtilities.isRightMouseButton(evt)) 
            imageGraphics.setColor(primaryColor);
        else
            imageGraphics.setColor(secondaryColor);
        
        //Draw the current pixel on the BufferedImage
        imageGraphics.drawLine(x, y, x, y); 
        
        //Draw the BufferedImage on the JPanel
        drawingGraphics.drawImage(currentDrawing, 
                drawingXMin, drawingYMin, null);
        
        //Clean up resources
        drawingGraphics.dispose();
        drawingGraphics = null;
        imageGraphics.dispose();
        imageGraphics = null;
    }//GEN-LAST:event_jDrawingAreaMouseClicked

